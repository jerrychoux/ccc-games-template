{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node10",
    "types": ["node"],

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
